@model HelmoBilite.Models.Driver

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DriverLicense" class="control-label"></label>
                <select asp-for="DriverLicense" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(HelmoBilite.Models.DriverLicence)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <span asp-validation-for="DriverLicense" class="text-danger"></span>
            </div>
            
            <div class="form-group"> 
                <label asp-for="Mat" class="form-label mt-4" for="Mat"></label>
                <input asp-for="Mat" class="form-control" id="Mat" type="text" placeholder="@Model.Mat" disabled="" />
                <span asp-validation-for="Mat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label mt-4" for="LastName"></label>
                <input asp-for="LastName" class="form-control" id="LastName" type="text" placeholder="@Model.LastName" disabled="" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="form-label mt-4" for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" id="FirstName" type="text" placeholder="@Model.FirstName" disabled="" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProfilePicture" class="form-label mt-4" for="ProfilePicture"></label>
                <input asp-for="ProfilePicture" class="form-control" id="ProfilePicture" type="text" placeholder="@Model.ProfilePicture" disabled="" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
