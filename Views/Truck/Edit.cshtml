@model HelmoBilite.ViewModel.TruckViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Truck</h4>
<hr/>
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <h4 class="alert-heading">Attention!</h4>
    <p class="mb-0">
        Due to server limitations, the picture upload is not available for the moment! We apologize for the inconvenience.<br/>
        Note that for already existing truck you can see the image by clicking on the "Details" button.
    </p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <select asp-for="Brand" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(HelmoBilite.Models.TruckBrand)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plate" class="control-label"></label>
                <input asp-for="Plate" class="form-control"/>
                <span asp-validation-for="Plate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(HelmoBilite.Models.DriverLicence)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxWeight" class="control-label"></label>
                <input asp-for="MaxWeight" class="form-control"/>
                <span asp-validation-for="MaxWeight" class="text-danger"></span>
            </div>
            <!--
            <div>
                <img class="img-fluid" src="~/images/ProfilePicture/@Model.Picture"/>
                <input type="file" accept="image/*" asp-for="Picture" class="form-control"/>
                <span asp-validation-for="Picture"></span>
            </div>
            <div class="form-group">
            <label asp-for="Picture" class="control-label"></label>
            <input asp-for="Picture" class="form-control"/>
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
        -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}